{
  "manifest_version": 3,
  "name": "Focus Shield",
  "description": "Tracks and protects you from distractions while studying or working.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "notifications",
    "idle",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type":"module"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }

}